<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReciveActivity">

    <TextView
        android:id="@+id/tv_recive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="넘어온값" />

    <EditText
        android:id="@+id/edt_reciveName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edt_reciveMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_reciveRoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="롤게임" />

        <RadioButton
            android:id="@+id/rb_reciveFlash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="플레시게임" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv_screenWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가로 해상도" />

    <TextView
        android:id="@+id/tv_screenHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="세로 해상도" />

</LinearLayout>